<!--section-->
<section class="section">
	<!--    intro header-->
	<div class="intro-header">
		<div class="content-image-wrapper">
			<div class="intro-content">
				<!--            intro text -->
				<div class="intro-text">
					<!--                Heading jumbo-->
					<h1 id="intro-line-1" class="heading-jumbo"><b>Introducing You,</b></h1>
					<h1 id="intro-line-2" class="heading-jumbo">As a Hand-Drawn Emoji</h1>
					<!--                Paragraph bigger-->
					<p class="paragraph-bigger">
						MyMoji is a fun way to commemorate your team or
						group with a customized, professional cartoon
						drawing
					</p>
					<button class="button" id="section1button" onclick="location.href='/newOrder';">
